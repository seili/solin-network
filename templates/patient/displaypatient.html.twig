{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-10 offset-1">
        <h3 class="text-center"> List des patients</h3>
            <div class="container">
                <table class="table table-condensed"  id="myTable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>genre</th>
                        <th>Date de naissance</th>
                        <th>Téléphone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            {% for patient in patients %}
                <tbody class="panel">
                    <tr data-toggle="collapse" data-target="#demo{{ patient.id }}" data-parent="#myTable">
                        <td>{{ patient.id }}</td>
                        <td>{{ patient.nom }}</td>
                        <td>{{ patient.prenom }}</td>
                        <td>{{ patient.gender }}</td>
                        <td>{{ patient.naissance|date("d/m/Y") }}</td>
                        <td>{{ patient.phone }}</td>
                        <td>
                            <a class="btn btn-outline-primary" href="{{ path('app_patient_show', {'id': patient.id}) }}" role="button">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-eye" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z"></path>
                                    <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"></path>
                                </svg>
                            </a>
                            <a class="btn btn-outline-primary" href="{{ path('app_patient_edit', {'id': patient.id}) }}" role="button">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                    <tr id="demo{{ patient.id }}" class="collapse">
                        <td colspan="6" class="hiddenRow">
                            <div class="card-body">Plus de détails concernant {{ patient.nom }}</div>
                            </td>
                    </tr>
                </tbody>
            {% else %}
                <div class="text-center alert alert-primary">Pas de patients !</div>
            {% endfor %}
            </table>
                        {#<div class="card-footer text-muted small">
                            {{ patients.created|date("m/d/Y h:i a") }} 
                        </div>#}
            </div>
        </div>
    </div>
{% endblock %}